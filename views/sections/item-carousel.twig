<div class="owl-carousel owl-theme js-item-carousel">
    {% for post in component.posts %}
        <div class="component-1-inner">
            <div class="card">
                <a href="{{ TimberPost(post.ID).link }}">
                    {% if TimberPost(post.ID).thumbnail.src %}
                        {% set thumbnail = TimberPost(post.ID).thumbnail.src | resize(800, 300) %}
                    {% else %}
                        {% set thumbnail = site.theme.link ~ '/dist/images/placeholder.jpg' %}
                    {% endif %}
                    <img src="{{thumbnail}}">
                </a>
                <div class="u-padding-xs-2">
                    <h1 class="u-h5-xs card-content-title">
                        <a href="{{ TimberPost(post.ID).link }}">{{ TimberPost(post.ID).title }}</a>
                    </h1>
                    <p class="card-content-description">{{ TimberPost(post.ID).get_preview(16) }}</p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
