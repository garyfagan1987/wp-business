<nav class="u-hidden-xs c-section c-section--slim c-section--grey-darker u-border-bottom--grey-dark">
    <div class="u-container">
        <div class="u-row">
            {% if options.social_icons is defined and options.social_icons is not empty %}
                <div class="u-col-sm-2">
                    <ul class="u-reset">
                        {% for social_icon in options.social_icons %}
                            <li class="u-margin-right-xs-2 u-display-xs-inline-block">
                                <a href="{{ social_icon.url }}" title="{{ social_icon.title }}">
                                    {% include 'components/icon.twig' with {
                                        'class': 'fa-lg ' ~ social_icon.icon
                                    } %}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            {% if options.links is defined and options.links is not empty %}
                <div class="u-col-sm-10">
                    <ul class="pull-right u-reset">
                        {% for link in options.links %}
                            {% if link.acf_fc_layout == 'telephone_number' %}
                                <li class="u-margin-left-xs-3 u-display-xs-inline-block">
                                    <a href="tel:+{{ link.country_code }}{{ link.number }}">
                                        {% include 'components/icon.twig' with {
                                            'class': 'fa-lg ' ~ link.icon
                                        } %}
                                        &nbsp+{{ link.country_code }}{{ link.number }}
                                    </a>
                                </li>
                            {% endif %}
                            {% if link.acf_fc_layout == 'email_address' %}
                                <li class="u-margin-left-xs-3 u-display-xs-inline-block">
                                    <a href="mailto:{{ link.email }}">
                                        {% include 'components/icon.twig' with {
                                            'class': 'fa-lg ' ~ link.icon
                                        } %}
                                        &nbsp;{{ link.email }}
                                    </a>
                                </li>
                            {% endif %}
                            {% if link.acf_fc_layout == 'location' %}
                                <li class="u-margin-left-xs-3 u-display-xs-inline-block">
                                    {% include 'components/icon.twig' with {
                                        'class': 'fa-lg ' ~ link.icon
                                    } %}
                                    {{ link.location }}
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
</nav>
